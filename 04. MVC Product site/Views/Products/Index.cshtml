@model IEnumerable<Product>

<div>
    <p>
        <a asp-controller="Products" asp-action="Create">Create new</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>   
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th>
                    @Html.DisplayFor(model => item.Name)
                </th>
                <th>
                    @Html.DisplayFor(model => item.Price)
                </th>
                <th>
                    @Html.ActionLink("Detailstails", "Details", new { id = item.Id }))
                </th>
            </tr>
            }
        </tbody>
    </table>

</div>